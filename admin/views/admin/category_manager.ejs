<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title pull-right"><a href="/admin/page_manager/add_category">+ Add Category</a></h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">

        <table class="table table-bordered table-hover DataTable">
          <thead>
          <tr>
            <th>S/N</th>
            <th>Category Name</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
              <%
                var total_category = categories.length;
                for(var i=0; i < total_category; i++){
              %>
          <tr>
            <td><%= i+1 %></td>
            <td><%= categories[i].category_name %></td>
            <td>
              <div class="dropdown">
                  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                  Action
                  <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu " aria-labelledby="dropdownMenu1">
                      <li><a href="/admin/page_manager/edit_category?category_name=<%= categories[i].category_name %>">Edit</a></li>
                      <li><a href="#" onclick="delete_category('<%= categories[i].id %>')">Delete</a></li>
                  </ul>
              </div>
          </td>
          </tr>
          <% } %>
          </tbody>
          <tfoot>
          <tr>
            <th>S/N</th>
            <th>Name</th>
            <th>Action</th>

          </tr>
          </tfoot>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
    </div>
    </div>
<script>
  function delete_category(category_id){
    swal({
      title: "Are you sure?",
      text: "You will not be able to recover this category!",
      type: "warning",
      showCancelButton: true,
      confirmButtonColor: "#DD6B55",
      confirmButtonText: "Yes, delete it!",
      closeOnConfirm: false,
      html: false
    }, function(){
        $.ajax({
          data:{id: category_id },
          url: '/admin/page_manager/delete_category',
          type: "DELETE",
          success: function(results){
            swal({
              title: "Category successfully deleted!",
              type: "success",
              text: ""
            }, function(){
              location.reload();
            });

          },
          error: function(err){
            console.log("error occur");
            console.log(err);
          }
        });
    });
  }
</script>
