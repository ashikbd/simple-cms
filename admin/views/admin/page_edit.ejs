<link rel="stylesheet" href="/assets/admin/dropzone/dropzone.css">
<div class="row">
  <div class="col-md-12">
    <div class="box box-info">
      <div class="box-header">
        <!-- tools box -->
        <div class="pull-right box-tools">
          <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fa fa-minus"></i></button>
          <!--<button type="button" class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fa fa-times"></i></button>-->
        </div>
        <!-- /. tools -->
      </div>
      <!-- /.box-header -->
      <div class="box-body pad">
        <p class="text-danger" id="error_list1"><% if(typeof error_msg != 'undefined'){ %> <%= error_msg %> <% } %></p>
        <form method="POST" action="/admin/page_manager/edit" id="page_edit_form1">
          <div class="form-group">
            <label for="title">Page title:</label>
            <input type="hidden" name="id" value="<%= page_details['_id'] %>">
            <input type="hidden" name="old_featured_img" value="<%= page_details['featured_image'] %>">
            <input type="text" class="form-control" name="title" value="<%= page_details['title'] %>">
          </div>

          <div class="form-group">
            <label for="alias">Alias:</label>

            <input type="text" class="form-control" name="alias" value="<%= page_details['alias'] %>">
          </div>

          <div class="form-group">
            <label for="category">Select Category:</label>
            <select class="form-control" name="category">
              <option>Select Category</option>
              <%
                var total_cat = categories.length;
                for(var i = 0; i < total_cat; i++){
              %>
              <option <% if(categories[i].category_name ==  page_details['category']){ %> selected<% } %>> <%= categories[i].category_name %></option>
              <% } %>
            </select>
          </div>

          <div class="form-group">
            <label for="description">Page Detail:</label>
            <textarea class="form-control" id="editor1" name="description" rows="10" cols="80">
              <%= page_details['description'] %>
            </textarea>


          </div>

          <div id="mydropzone" class="form-group dropzone">
            <div id="dropzone-previews1" class="dropzone-previews">
                <div id="previous_image1">
                  <img style="width:120px;" alt="<%= page_details['featured_image'] %>" src="/uploads/<%= page_details['featured_image'] %>" />
                </div>
            </div>

            <div class="dz-default dz-message"></div>
              Upload New Featured Image
          </div>

          <div class="form-group">
            <div class="col-sm-10">
              <button type="submit" class="btn btn-success" id="submit_page_edit">Save</button>
            </div>
          </div>

        </form>
      </div>
    </div>
    <!-- /.box -->
    </div>
    </div>
<script src="/assets/admin/dropzone/dropzone.js"></script>

<script>
$(document).ready(function(){
    CKEDITOR.replace('editor1');

    Dropzone.autoDiscover = false;

    var dropZone = $("div#mydropzone").dropzone({
        url: "/admin/page_manager/edit",
        autoProcessQueue: false,
        previewsContainer: "#dropzone-previews1",
        uploadMultiple: false,
        maxFiles: 1,
        maxFileSize: 1000,
        addRemoveLinks: true,
        acceptedFiles: "image/jpeg,image/png,image/gif",

        init: function() {

            var dz = this;
            $("#submit_page_edit").on('click',function(e) {

              e.preventDefault();
              e.stopPropagation();

              var form = $(this).closest('form#page_edit_form1');

              if (dz.getQueuedFiles().length > 0) {
                  //alert('test1');
                  dz.processQueue();
              } else {
                  var formData = $("#page_edit_form1").serializeArray();
                  formData[5]['value'] = CKEDITOR.instances['editor1'].getData();
                  formData = $.param(formData);

                  $.ajax({
                    type: "POST",
                    //data: $("#page_edit_form1").serialize(),
                    data: formData,
                    url: "/admin/page_manager/edit",
                    success: function(results){
                      console.log(results);

                      if(results == 'success'){
                        window.location = '/admin/page_manager/list';
                      }
                      else{
                        var errors = JSON.parse(results);
                        var errors_li = "";
                        errors.forEach(function(error){
                          errors_li += '<li>' + error['msg'] +'</li>';
                        });

                        $("#error_list1").html('<ul>'+ errors_li +'</ul>');

                      }
                    }
                  });

              }
            });

        },
        sending: function(data, xhr, formData){

          formData.append('id', $('input[name="id"]').val());
          formData.append('old_featured_img', $('input[name="old_featured_img"]').val());
          formData.append('title', $('input[name="title"]').val());
          formData.append('alias', $('input[name="alias"]').val());
          formData.append('category', $('select[name="category"]').val());
          formData.append('description', CKEDITOR.instances['editor1'].getData());
        },
        maxfilesreached: function(){
          $("#previous_image1").html("");
          //alert('test');
        },
        success: function(results, callback){

          if(callback == 'success'){
            window.location = '/admin/page_manager/list';
          }
          else{
            var errors = JSON.parse(callback);
            var errors_li = "";
            errors.forEach(function(error){
              errors_li += '<li>' + error['msg'] +'</li>';
            });

            $("#error_list1").html('<ul>'+ errors_li +'</ul>');
            this.removeAllFiles(true);
          }

        }

    });

 });
</script>
