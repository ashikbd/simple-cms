<div class="row">
  <div class="col-md-12">
    <div class="box box-info">
      <div class="box-header">
        <!-- /. tools -->
      </div>
      <!-- /.box-header -->
      <div class="box-body pad">
        <p class="text-danger"><% if(typeof error_msg != 'undefined'){ %> <%= error_msg[0]['msg'] %> <% } %></p>
        <form method="POST" action="/admin/image_manager/add_category">
          <div class="col-md-12">
            <div class="col-md-6 zero-left-padding">
              <div class="form-group">
                <label for="title">Category Name:</label>
                <input type="text" class="form-control" name="category_name" required>
              </div>
            </div>
          </div>

          <div class="col-md-12">
              <label for="title">Bigger Image Size(pixels)</label>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <label for="title">Width:</label>

              <input type="number" class="form-control" name="bigger_img_width" required>

            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <label for="title">Height:</label>
              <input type="number" class="form-control" name="bigger_img_height">
            </div>
          </div>

          <div class="col-md-12">
              <label for="title">Thumbnail Size(pixels)</label>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <label for="title">Width:</label>
              <input type="number" class="form-control" name="thumb_img_width" required>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <label for="title">Height:</label>
              <input type="number" class="form-control" name="thumb_img_height">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-10">
              <button type="submit" class="btn btn-success">Save</button>
            </div>
          </div>

        </form>
      </div>
    </div>
    <!-- /.box -->
    </div>
    </div>
